{
	"info": {
		"name": "GAIA Hackathon API",
		"description": "API for the GAIA 2026 hackathon - Dephy dataset",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3001/api"
		}
	],
	"item": [
		{
			"name": "Query",
			"item": [
				{
					"name": "List tables",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/query/tables",
							"host": ["{{baseUrl}}"],
							"path": ["query", "tables"]
						}
					}
				},
				{
					"name": "Query domaine",
					"request": {
						"method": "POST",
						"url": {
							"raw": "{{baseUrl}}/query/data",
							"host": ["{{baseUrl}}"],
							"path": ["query", "data"]
						},
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"table\": \"domaine\",\n  \"select\": [\"id\", \"code\", \"departement\", \"campagne\"],\n  \"filters\": [\n    { \"field\": \"departement\", \"operator\": \"eq\", \"value\": \"75\" }\n  ],\n  \"limit\": 20,\n  \"offset\": 0\n}"
						}
					}
				},
				{
					"name": "Query dispositif",
					"request": {
						"method": "POST",
						"url": {
							"raw": "{{baseUrl}}/query/data",
							"host": ["{{baseUrl}}"],
							"path": ["query", "data"]
						},
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"table\": \"dispositif\",\n  \"select\": [\"id\", \"code\", \"type\", \"campagne\"],\n  \"limit\": 10,\n  \"offset\": 0\n}"
						}
					}
				},
				{
					"name": "Query with filters",
					"request": {
						"method": "POST",
						"url": {
							"raw": "{{baseUrl}}/query/data",
							"host": ["{{baseUrl}}"],
							"path": ["query", "data"]
						},
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"table\": \"domaine\",\n  \"filters\": [\n    { \"field\": \"campagne\", \"operator\": \"gte\", \"value\": 2020 },\n    { \"field\": \"departement\", \"operator\": \"like\", \"value\": \"7%\" }\n  ],\n  \"limit\": 20,\n  \"offset\": 0\n}"
						}
					}
				},
				{
					"name": "Query sdc_realise_perf",
					"request": {
						"method": "POST",
						"url": {
							"raw": "{{baseUrl}}/query/data",
							"host": ["{{baseUrl}}"],
							"path": ["query", "data"]
						},
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"table\": \"sdc_realise_perf\",\n  \"select\": [\"sdcId\", \"departement\", \"sdcFiliere\"],\n  \"limit\": 10,\n  \"offset\": 0\n}"
						}
					}
				}
			]
		}
	]
}
