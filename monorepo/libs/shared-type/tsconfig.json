{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": "./src",
    "declaration": true,
    "module": "commonjs",
    "target": "es2015",
    "composite": true,
    "removeComments": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "strictPropertyInitialization": false,
    "strict": true
  },
  "include": ["src"]
}
